<mujoco model="legwheel2">
    <include file="./common/skybox.xml"/>
    <include file="./common/visual.xml"/>
    <include file="./common/materials.xml"/>
    
    <option gravity="0 0 -9.8"/>
    <default>
        <joint armature="0.001" damping="0.001" />
    </default>
    <worldbody>
        <geom name="floor" pos="0 0 -.05" size="10 10 .2" type="plane" material="grid"/>
        <body name="root" pos="0 0 1.54" euler="0 0 0">
            <joint name="root_joint" type="free"/>
            <site name="root" pos="0 0 0.3" size="0.1" rgba="0 0 0 1"/>
            <geom size="0.5 0.5 0.3" type="box" rgba="0 0 0.8 1"  material="self"/>
            <body name="thigh_left" pos="-0.31 0.6 -0.4" euler="0 40 0" >
                <joint name="thigh_left_joint" type="hinge" pos="0 0 0.5" axis="0 1 0"/>
                <geom size="0.1 0.1 0.55" type="box" rgba="0 0.8 0. 0.5"  material="self"/>
                <body name="calf_left" pos="0.3 0. -0.5" euler="0 -90 0">
                    <joint name="calf_left_joint" type="hinge" pos="0 0 0.3" axis="0 1 0"/>
                    <geom size="0.1 0.1 0.6" type="box" rgba="0.8 0.8 0. 0.5"  material="self"/>
                    <body name="rod_left" pos="0.45 0 0.66" euler="0 75 0" >
                        <joint name="rod_left_joint" type="hinge" pos="0 0 -0.45" axis="0 1 0"/>
                        <geom size="0.03 0.09 0.5" type="box" rgba="0 0.0 0.0 0.5"  material="self"/>
                    </body>
                    <body name="wheel_left" pos="0. 0.2 -0.5" euler="90 0 0">
                        <joint name="wheel_left_joint" type="hinge" pos="0 0 0" axis="0 0 -1"/>
                        <geom size="0.3 0.1" type="cylinder" rgba="0.8 0 0 1"  material="self"/>
                    </body>
                </body>
            </body>
            
            <body name="thigh_right" pos="-0.31 -0.6 -0.4" euler="0 40 0" >
                <joint name="thigh_right_joint" type="hinge" pos="0 0 0.5" axis="0 1 0"/>
                <geom size="0.1 0.1 0.55" type="box" rgba="0 0.8 0. 0.5"  material="self"/>
                <body name="calf_right" pos="0.3 0. -0.5" euler="0 -90 0">
                    <joint name="calf_right_joint" type="hinge" pos="0 0 0.3" axis="0 1 0"/>
                    <geom size="0.1 0.1 0.6" type="box" rgba="0.8 0.8 0. 0.5"  material="self"/>
                    <body name="rod_right" pos="0.45 0 0.66" euler="0 75 0" >
                        <joint name="rod_right_joint" type="hinge" pos="0 0 -0.45" axis="0 1 0"/>
                        <geom size="0.03 0.09 0.5" type="box" rgba="0 0. 0.0 0.5"  material="self"/>
                    </body>
                    <body name="wheel_right" pos="0. -0.2 -0.5" euler="90 0 0">
                        <joint name="wheel_right_joint" type="hinge" pos="0 0 0" axis="0 0 -1"/>
                        <geom size="0.3 0.1" type="cylinder" rgba="0.8 0 0 1"  material="self"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>
    <equality>
        <connect body1="root" body2="rod_left" anchor="-0.43 0.6 0.2"/>
        <connect body1="root" body2="rod_right" anchor="-0.43 -0.6 0.2"/>
    </equality>
    <actuator>
        <motor name="thigh_left_motor" joint="thigh_left_joint" />
        <motor name="thigh_right_motor" joint="thigh_right_joint" />
        <!-- <position name="thigh_left_pos" joint="thigh_left_joint" kp="1000" />
        <position name="thigh_right_pos" joint="thigh_right_joint" kp="1000" /> -->

        <motor name="wheel_left_motor" joint="wheel_left_joint" />
        <motor name="wheel_right_motor" joint="wheel_right_joint" />
    </actuator>
    <!-- <sensor>
        <gyro name="gyro" site="root"/>
        <accelerometer name="accel" site="root"/>

        <actuatorpos name="wheel_left_pos" actuator="wheel_left_motor" />
        <actuatorpos name="wheel_right_pos" actuator="wheel_right_motor" />
        <actuatorvel name="wheel_left_vel" actuator="wheel_left_motor" />
        <actuatorvel name="wheel_right_vel" actuator="wheel_right_motor" />
    </sensor> -->
</mujoco>